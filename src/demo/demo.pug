        .row
          label.inline(for="val-gamesection-filter-name") name
          input#val-gamesection-filter-name
        .row
          label.inline(for="val-gamesection-filter-offset") offset
          input#val-gamesection-filter-offset
        .row
          label.inline(for="val-gamesection-filter-limit") limit
          input#val-gamesection-filter-limit

      +fieldset('Order')
        .row
          label
            | Field
            select#val-gamesection-order-field0
              option(value="") &nbsp;
              option(value="id") id
              option(value="name") name
              option(value="string_id") string_id
          label
            | Desc
            input#val-game-gamesection-desc0(type="checkbox")
        .row
          label
            | Field
            select#val-gamesection-order-field1
              option(value="") &nbsp;
              option(value="id") id
              option(value="name") name
              option(value="string_id") string_id
          label
            | Desc
            input#val-gamesection-order-desc1(type="checkbox")


      .row
        button#btn-gamesection-list.btn List

      +fieldset('Create/Update')
        .row
          label.inline(for="val-gamesection-id") id
          input#val-gamesection-id
        .row
          label.inline(for="val-gamesection-string-id") string_id
          input#val-gamesection-string-id
        .row
          label.inline(for="val-gamesection-name") name
          input#val-gamesection-name
        .row
          button#btn-gamesection-create.btn Create
          button#btn-gamesection-update.btn Update

    +fieldset('GameType')
      +fieldset('Filter')
        .row
          label.inline(for="val-gametype-filter-id") id
          input#val-gametype-filter-id
        .row
          label.inline(for="val-gametype-filter-string-id") string_id
