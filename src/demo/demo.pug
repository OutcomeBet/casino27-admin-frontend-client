        .row
          label.inline(for="val-gametype-name") name
          input#val-gametype-name
        .row
          button#btn-gametype-create.btn Create
          button#btn-gametype-update.btn Update

    +fieldset('Patch')
      +fieldset('Filter')
        .row
          label.inline(for="val-patch-filter-id") id
          input#val-patch-filter-id
        .row
          label.inline(for="val-patch-filter-casino-id") casino_id
          input#val-patch-filter-casino-id
        .row
          label.inline(for="val-patch-filter-string-id") string_id
          input#val-patch-filter-string-id
        .row
          label.inline(for="val-patch-filter-name") type
          input#val-patch-filter-type
        .row
          label.inline(for="val-patch-filter-name") name
          input#val-patch-filter-name
        .row
          label.inline(for="val-patch-filter-offset") offset
          input#val-patch-filter-offset
        .row
          label.inline(for="val-patch-filter-limit") limit
          input#val-patch-filter-limit

      +fieldset('Order')
        .row
          label
            | Field
            select#val-patch-order-field0
              option(value="") &nbsp;
              option(value="id") id
              option(value="casino_id") casino_id
              option(value="string_id") string_id
              option(value="type") type
              option(value="name") name
          label
            | Desc
            input#val-game-patch-desc0(type="checkbox")
        .row
          label
            | Field
            select#val-patch-order-field1
              option(value="") &nbsp;
              option(value="id") id
              option(value="casino_id") casino_id
              option(value="string_id") string_id
              option(value="type") type
              option(value="name") name
          label
            | Desc
