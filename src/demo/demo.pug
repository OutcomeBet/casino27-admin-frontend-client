mixin fieldset(title)
  fieldset
    legend #{title}
    section
      block

doctype html
html
  head
    meta(charset="utf-8")
    title JSON RPC test

    link(href="node_modules/normalize.css/normalize.css" rel="stylesheet")

    script(src="node_modules/jquery/dist/jquery.js")
    script(src="node_modules/lodash/lodash.js")
    script(src="node_modules/ant-jsonrpc2/dist/jsonrpc2.js")
    //script(src="dist/js/jsonrpc2.js")

    link(href="dist/demo/css/main.css" rel="stylesheet")

    script(src="dist/demo/js/main.js")
    script(src="dist/api.js")

  body

    .row
      label
        | URL:
        input#val-url(type="text")

    .row
      button#btn-connect.btn Connect
      button#btn-auth.btn Auth.GetUser
      button#btn-login.btn Auth.Login
      button#btn-logout.btn Auth.Logout

    .row
      label
        input#val-autoconnect(type="checkbox")
        | &nbsp;Auto connect


    +fieldset('Casino')
      +fieldset('Filter')
        .row
          label.inline(for="val-casino-filter-id") id
          input#val-casino-filter-id
        .row
          label.inline(for="val-casino-filter-string-id") string_id
          input#val-casino-filter-string-id
        .row
          label.inline(for="val-casino-filter-site") site
          input#val-casino-filter-site
        .row
          label.inline(for="val-casino-filter-site") create_time
          input#val-casino-filter-create-time
        .row
          label.inline(for="val-casino-filter-site") active
          select#val-casino-filter-active
            option(value="") &nbsp;
            option(value="true") true
            option(value="false") false
        .row
          label.inline(for="val-casino-filter-offset") offset
          input#val-casino-filter-offset
        .row
          label.inline(for="val-casino-filter-limit") limit
          input#val-casino-filter-limit

      +fieldset('Order')
        .row
          label
            | Field
            select#val-casino-order-field0
              option(value="") &nbsp;
              option(value="id") id
              option(value="string_id") string_id
              option(value="site") site
              option(value="create_time") create_time
              option(value="active") active
          label
            | Desc
            input#val-casino-order-desc0(type="checkbox")
        .row
          label
            | Field
            select#val-casino-order-field1
              option(value="") &nbsp;
              option(value="id") id
              option(value="string_id") string_id
              option(value="site") site
              option(value="create_time") create_time
              option(value="active") active
          label
            | Desc
            input#val-casino-order-desc1(type="checkbox")

      .row
        button#btn-casino-list.btn List

      +fieldset('Create/Update')
        .row
          label.inline(for="val-casino-id") id
          input#val-casino-id
        .row
          label.inline(for="val-casino-string-id") string_id
          input#val-casino-string-id
        .row
          label.inline(for="val-casino-site") site
          input#val-casino-site
        .row
          label.inline(for="val-casino-active") active
          input(type="checkbox")#val-casino-active
        .row
          button#btn-casino-create.btn Create
          button#btn-casino-update.btn Update


    +fieldset('Game')
      +fieldset('Filter')
        .row
          label.inline(for="val-game-filter-id") id
          input#val-game-filter-id
        .row
          label.inline(for="val-game-filter-string-id") string_id
          input#val-game-filter-string-id
        .row
          label.inline(for="val-game-filter-name") name
          input#val-game-filter-name
        .row
          label.inline(for="val-game-filter-description") description
          input#val-game-filter-description
        .row
          label.inline(for="val-game-filter-type-id") type_id
