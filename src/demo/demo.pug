        .row
          label
            | Field
            select#val-gametype-order-field1
              option(value="") &nbsp;
              option(value="id") id
              option(value="name") name
              option(value="string_id") string_id
          label
            | Desc
            input#val-gametype-order-desc1(type="checkbox")


      .row
        button#btn-gametype-list.btn List

      +fieldset('Create/Update')
        .row
          label.inline(for="val-gametype-id") id
          input#val-gametype-id
        .row
