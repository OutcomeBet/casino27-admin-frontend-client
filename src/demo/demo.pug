      .row
        button#btn-patch-list.btn List

      +fieldset('Create/Update')
        .row
          label.inline(for="val-patch-id") id
          input#val-patch-id
        .row
          label.inline(for="val-patch-casino-id") casino_id
          input#val-patch-casino-id
        .row
          label.inline(for="val-patch-string-id") string_id
          input#val-patch-string-id
        .row
          label.inline(for="val-patch-type") type
          select#val-patch-type
            option(value="base") base
            option(value="currency") currency
            option(value="alternative") alternative
            option(value="mix") mix

        .row
          label.inline(for="val-patch-name") name
          input#val-patch-name
        .row
          button#btn-patch-create.btn Create
          button#btn-patch-update.btn Update

    +fieldset('Custom Method')
      .row: input#val-method

      .row: label(for="val-params") Params (JSON):
      .row
        | {
        textarea(rows="5")#val-params
        | }

      .row
        button#btn-send Send

    .row
      button#btn-cls(style="display: none") cls

    pre#out
