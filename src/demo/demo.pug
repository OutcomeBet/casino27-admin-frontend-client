        .row
          label.inline(for="val-game-filter-offset") offset
          input#val-game-filter-offset
        .row
          label.inline(for="val-game-filter-limit") limit
          input#val-game-filter-limit

      +fieldset('Order')
        .row
          label
            | Field
            select#val-game-order-field0
              option(value="") &nbsp;
              option(value="id") id
              option(value="name") name
              option(value="string_id") string_id
              option(value="type_id") type_id
              option(value="description") description
          label
            | Desc
            input#val-game-order-desc0(type="checkbox")
        .row
          label
            | Field
            select#val-game-order-field1
              option(value="") &nbsp;
              option(value="id") id
              option(value="name") name
              option(value="string_id") string_id
              option(value="type_id") type_id
              option(value="description") description
          label
            | Desc
            input#val-game-order-desc1(type="checkbox")


      .row
        button#btn-game-list.btn List

      +fieldset('Create/Update')
        .row
          label.inline(for="val-game-id") id
          input#val-game-id
        .row
          label.inline(for="val-game-string-id") string_id
          input#val-game-string-id
        .row
          label.inline(for="val-game-name") name
          input#val-game-name
        .row
          label.inline(for="val-game-description") description
          input#val-game-description
        .row
          label.inline(for="val-game-type-id") type_id
          input#val-game-type-id
        .row
          button#btn-game-create.btn Create
          button#btn-game-update.btn Update

    +fieldset('GameSection')
      +fieldset('Filter')
        .row
          label.inline(for="val-gamesection-filter-id") id
